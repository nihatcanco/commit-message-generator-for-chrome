{
  "background": {
    "scripts": [
      "scripts/libs/jquery-3.1.1.js",
      "scripts/backgrounds/background.js"
    ]
  },
  "manifest_version": 2,
  "name": "Commit Message Generator Extension",
  "version": "0.1",
  "description": "A Google Chrome extension to generate automated commit messages with a predefined format.",
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": ""
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "content_scripts": [
    {
      "all_frames": false,
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "scripts/libs/jquery-3.1.1.js",
        "scripts/libs/jquery-ui.min.js",
        "scripts/libs/helper.js",
        "scripts/contents/content.js"
      ],
      "css": [
        "styles/jquery-ui.min.css",
        "styles/fontawesome-all.min.css",
        "styles/content.css"
      ]
    }
  ],
  "permissions": [
    "storage",
    "notifications",
    "tabs",
    "cookies",
    "activeTab"
  ],
  "web_accessible_resources": [
    "styles/fonts/*"
  ]
}
