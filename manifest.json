{
  "background": {
    "scripts": [
      "scripts/libs/jquery-3.3.1.min.js",
      "scripts/libs/helper.js",
      "scripts/backgrounds/background.js"
    ]
  },
  "manifest_version": 2,
  "name": "Git Helper Tools",
  "version": "0.44.5",
  "description": "A Google Chrome extension that contains tools for software developers.",
  "browser_action": {
    "default_popup": "",
    "default_title": ""
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "content_scripts": [
    {
      "all_frames": false,
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "scripts/libs/jquery-3.3.1.min.js",
        "scripts/libs/helper.js",
        "scripts/contents/content.js"
      ],
      "css": [
        "styles/fontawesome-all.min.css",
        "styles/content.css"
      ]
    }
  ],
  "permissions": [
    "storage",
    "notifications",
    "tabs",
    "cookies",
    "activeTab"
  ],
  "web_accessible_resources": [
    "styles/webfonts/*",
    "styles/fonts/*"
  ]
}
