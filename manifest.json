{
  "manifest_version": 2,
  "name": "Issue Tracker Dev Tools",
  "version": "1.0.0.4",
  "author": "Nihatcan Colpan",
  "description": "A Google Chrome extension that contains dev tools for issue tracker systems.",
  "homepage_url": "https://github.com/nihatcanco/issue-tracker-dev-tools",
  "background": {
    "scripts": [
      "scripts/libs/helper.js",
      "scripts/backgrounds/background.js"
    ]
  },
  "browser_action": {
    "default_popup": "",
    "default_title": ""
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "permissions": [
    "storage",
    "tabs",
    "http://*/",
    "https://*/"
  ],
  "web_accessible_resources": [
    "styles/webfonts/*",
    "styles/fonts/*",
    "images/*"
  ]
}
